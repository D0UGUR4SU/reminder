@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

System_Boundary(System, "Reminder Management System") {
    Container(Frontend, "Frontend", "Angular", "User Interface (UI)")
    Container(Backend, "Backend", "Java Spring Boot", "RESTful API with Microservices")

    Person(User, "User", "End user")

    User -> Frontend: Interacts with the interface
    Frontend -> Backend: Sends HTTP/JSON requests
    Backend --> Frontend: Returns HTTP/JSON responses
}

Rel(User, Frontend, "Utiliza", "HTTP/JSON")
@enduml